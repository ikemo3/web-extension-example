{
  "name": "web-extension-example",
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "archive": "tsx ./tools/archive.ts",
    "build": "run-s build:*",
    "build:chrome": "vite build",
    "build:firefox": "vite build --mode firefox",
    "coverage": "vitest --coverage",
    "dev": "vite",
    "dev:firefox": "vite --mode firefox",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint . --ext .js --ext .ts --ext .tsx --ext .jsx --ext .cjs --fix",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:dep": "depcruise --config .dependency-cruiser.cjs .",
    "lint:eslint": "eslint . --ext .js --ext .ts --ext .tsx --ext .jsx --ext .cjs",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "serve": "vite preview",
    "start": "vite",
    "test": "vitest",
    "upload": "tsx ./tools/upload.ts"
  },
  "dependencies": {
    "solid-js": "^1.8.17"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.23",
    "@types/chrome": "^0.0.267",
    "@types/chrome-webstore-upload": "^1.0.0",
    "@types/string-hash": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-istanbul": "^1.5.3",
    "autoprefixer": "^10.4.19",
    "chrome-webstore-upload": "^3.0.3",
    "dependency-cruiser": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "happy-dom": "^13.10.1",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.4",
    "solid-devtools": "^0.30.1",
    "sort-package-json": "^2.10.0",
    "string-hash": "^1.1.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.13",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^1.5.3",
    "zip-a-folder": "^3.1.6"
  },
  "packageManager": "pnpm@8.15.8"
}
