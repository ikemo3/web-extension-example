{
  "name": "web-extension-example",
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "archive": "tsx ./tools/archive.ts",
    "build": "run-s build:*",
    "build:chrome": "vite build",
    "build:firefox": "vite build --mode firefox",
    "coverage": "vitest --coverage",
    "dev": "vite",
    "dev:firefox": "vite --mode firefox",
    "fix": "run-s fix:*",
    "fix:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint . --fix",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:dep": "depcruise --config .dependency-cruiser.js .",
    "lint:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "serve": "vite preview",
    "start": "vite",
    "test": "vitest",
    "upload": "tsx ./tools/upload.ts"
  },
  "dependencies": {
    "solid-js": "^1.9.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.25",
    "@eslint/js": "^9.11.1",
    "@types/chrome": "^0.0.273",
    "@types/chrome-webstore-upload": "^1.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/string-hash": "^1.1.3",
    "@vitest/coverage-istanbul": "^2.1.1",
    "autoprefixer": "^10.4.20",
    "chrome-webstore-upload": "^3.1.3",
    "dependency-cruiser": "^16.4.2",
    "eslint": "^9.11.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "globals": "^15.9.0",
    "happy-dom": "^15.7.4",
    "npm-run-all2": "^6.2.3",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "solid-devtools": "^0.30.1",
    "sort-package-json": "^2.10.1",
    "string-hash": "^1.1.3",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^2.1.1",
    "zip-a-folder": "^3.1.7"
  },
  "packageManager": "pnpm@9.11.0"
