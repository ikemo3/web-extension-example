{
  "name": "web-extension-example",
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "archive": "tsx ./tools/archive.ts",
    "build": "run-s build:*",
    "build:chrome": "vite build",
    "build:firefox": "vite build --mode firefox",
    "coverage": "vitest --coverage",
    "dev": "vite",
    "dev:firefox": "vite --mode firefox",
    "fix": "run-s fix:*",
    "fix:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint . --fix",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:dep": "depcruise --config .dependency-cruiser.js .",
    "lint:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "serve": "vite preview",
    "start": "vite",
    "test": "vitest",
    "upload": "tsx ./tools/upload.ts"
  },
  "dependencies": {
    "solid-js": "^1.9.4"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.31",
    "@eslint/js": "^9.20.0",
    "@types/chrome": "^0.0.302",
    "@types/chrome-webstore-upload": "^1.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/string-hash": "^1.1.3",
    "@vitest/coverage-istanbul": "^3.0.5",
    "autoprefixer": "^10.4.20",
    "chrome-webstore-upload": "^3.1.4",
    "dependency-cruiser": "^16.9.0",
    "eslint": "^9.20.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "globals": "^15.14.0",
    "happy-dom": "^16.8.1",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "solid-devtools": "^0.33.0",
    "sort-package-json": "^2.14.0",
    "string-hash": "^1.1.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vite": "^6.1.0",
    "vite-plugin-solid": "^2.11.1",
    "vitest": "^3.0.5",
    "zip-a-folder": "^3.1.8"
  },
  "packageManager": "pnpm@9.15.5"
}
