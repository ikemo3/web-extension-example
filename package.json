{
  "name": "chrome-extension-example",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "archive": "run-s archive:*",
    "archive:chrome": "tsx ./tools/archive.ts",
    "archive:firefox": "web-ext build -s dist/firefox -a artifacts -n firefox.zip -o",
    "build": "run-s build:*",
    "build:chrome": "vite build",
    "build:firefox": "vite build --mode firefox",
    "coverage": "vitest --coverage",
    "dev": "vite",
    "dev:firefox": "vite --mode firefox",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint . --ext .js --ext .ts --ext .tsx --ext .jsx --ext .cjs --fix",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext .js --ext .ts --ext .tsx --ext .jsx --ext .cjs",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "serve": "vite preview",
    "start": "vite",
    "test": "vitest",
    "upload": "tsx ./tools/upload.ts"
  },
  "dependencies": {
    "solid-js": "^1.8.11"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.23",
    "@types/chrome": "^0.0.258",
    "@types/chrome-webstore-upload": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-istanbul": "^1.4.0",
    "chrome-webstore-upload": "^3.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "happy-dom": "^13.8.6",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.4",
    "solid-devtools": "^0.29.3",
    "sort-package-json": "^2.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-solid": "^2.8.2",
    "vitest": "^1.4.0",
    "web-ext": "^7.11.0",
    "zip-a-folder": "^3.1.6"
  },
  "packageManager": "pnpm@8.15.4"
}
